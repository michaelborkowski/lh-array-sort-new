cabal-version:      >=1.10

name:               benchrunner
version:            0.1
build-type:         Simple
synopsis:           Benchmark harness.

executable benchrunner
    main-is:          Benchrunner.hs
    other-modules:    Measure
    -- other-extensions:
    build-depends:      base
                      , lh-array-sort
                      , criterion
                      , random
                      , deepseq
                      , split
                      , monad-par
                      , time
                      , primitive
    default-language:   Haskell2010
    default-extensions: TupleSections
                        BangPatterns
                        NamedFieldPuns
                        RecordWildCards
                        ScopedTypeVariables
                        DeriveGeneric
    ghc-options:        -Wall -Wcompat
                        -threaded -rtsopts
                        -fdefer-typed-holes
                        -O2
